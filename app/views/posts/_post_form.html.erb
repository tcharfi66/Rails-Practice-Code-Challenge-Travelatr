<%= form_for  @post do |f| %>
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content, "Content:" %>
    <%= f.text_field :content %>
    <br>
    <%= f.collection_select(:blogger_id, Blogger.all, :id, :name)%>
    <%= f.label :name, "Blogger:" %>
    <br>
    <%= f.collection_select(:destination_id, Destination.all, :id, :name)%>
    <%= f.label :destination, "Destination:" %>
    <br>
    <%= f.submit button_text %>
    <% end %>
    


